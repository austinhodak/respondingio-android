<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="material_drawer_background">@color/md_grey_900</item>
        <item name="material_drawer_selected">#1AF44336</item>
        <item name="material_drawer_selected_text">@color/md_red_500</item>

       <!-- <item name="md_background_color">@color/timelineBG</item>-->
        <item name="md_corner_radius">5dp</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="material_drawer_secondary_text">#99FFFFFF</item>

        <item name="centre_button_color">@color/md_red_500</item>
        <item name="active_centre_button_icon_color">#FFF</item>

        <item name="colorControlNormal">#FFFFFF</item>

        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="IncidentPopup" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>-

</resources>