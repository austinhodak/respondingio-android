<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

        <ImageView
                android:src="@drawable/ic_close_24dp"
                android:id="@+id/close_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="RESPONDING"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"/>

        <ImageView
                android:src="@drawable/ic_settings_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

        <ImageView
                android:src="@drawable/icons8_fire_station_96"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        <TextView
                android:id="@+id/agency_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Select Agency"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="16sp"/>

        <ProgressBar
                android:visibility="gone"
                android:id="@+id/agency_pg"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

    </LinearLayout>


    <RadioGroup
            android:id="@+id/agency_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/timeline_round_20"
            android:backgroundTint="@color/md_grey_850"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="48dp"
            android:paddingRight="16dp">

    </RadioGroup>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

        <ImageView
                android:src="@drawable/icons8_region_96"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        <TextView
                android:id="@+id/responding_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Responding to..."
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="16sp"/>

    </LinearLayout>

    <RadioGroup
            android:id="@+id/responding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:paddingLeft="48dp"
            android:paddingRight="16dp"
            android:background="@drawable/timeline_round_20"
            android:backgroundTint="@color/md_grey_850"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="8dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response options will show after you select an agency."
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"/>

    </RadioGroup>


    <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delayed_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="DELAYED"
                android:visibility="gone"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="UPON SELECTING BOTH YOU WILL BE MARKED RESPONDING"
            android:textSize="10sp"/>

</LinearLayout>